{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "prefer-const": "warn",
    "array-callback-return": "error",
    "no-duplicate-imports": "error"
  },
  "globals": {
    "supabase": "readonly",
    "ENV": "readonly"
  }
}